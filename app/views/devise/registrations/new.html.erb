<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%# 「モデル名」にはUserモデルであれば@userを渡しましょう。%>
        <%# 「新規登録機能へのパス」は、devise導入後にrails routesを実行してdevise/registrations#createへのパスを確認し、記載してください。 %>
        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :nickname, "ユーザー名" %><br />
          <%= f.text_field :nickname, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <% if @minimum_password_length %>
          <% end %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :profile, "職業" %><br />
          <%= f.text_field :profile %>
        </div>


        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">生年月日</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='input-birth-wrap'>
            <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :man , "男性"%>
          <%= f.radio_button :gender, :man %>
          <%= f.label :woman ,"女性"%>
          <%= f.radio_button :gender, :woman %>
        </div>
        <div class="field">
          <%= f.radio_button :gender, :male %>
          <%= f.label :gender, "男性", {value: :male, style: "display: inline-block;"} %>
          <%= f.radio_button :gender, :female %>
          <%= f.label :gender, "女性", {value: :female, style: "display: inline-block;"} %>
        </div>

        <div class="field">
          <%= f.label :first_name , "" %><br />
          <%= f.text_field :first_name  %>
        </div>

        <div class="field">
          <%= f.label :building_name , "建物名" %><br />
          <%= f.text_field :building_name  %>
        </div>

        <div class="field">
          <%= f.label :building_name , "建物名" %><br />
          <%= f.text_field :building_name  %>
        </div>

        <div class="field">
          <%= f.label :location_id, "都道府県" %><br />
          <%= f.collection_select :location_id, Location.all, :id, :name, {} %>
        </div>

        <div class="field">
          <%= f.label :municipality , "市区町村" %><br />
          <%= f.text_field :municipality  %>
        </div>

        <div class="field">
          <%= f.label :address, "番地" %><br />
          <%= f.text_field :address %>
        </div>

        <div class="field">
          <%= f.label :building_name , "建物名" %><br />
          <%= f.text_field :building_name  %>
        </div>

        <div class="field">
          <%= f.label :phone_number, "電話番号" %><br />
          <%= f.text_field :phone_number %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>