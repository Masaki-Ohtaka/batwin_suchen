          <%= devise_error_messages! %>
          
          <table border="0" cellpadding="0" cellspacing="0">
            <tbody>
              <tr>
                <th>
                  <%= f.label :email, "メールアドレス" %>
                  <b>※</b>
                </th>
                <td>
                  <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>　半角英数字
                  <br>
                  <div style="margin-top:13px;line-height:18px;">
                    ※できるだけパソコンのアドレスでご登録お願いします（写真を送付する関係）<br>
                    ※携帯のアドレスをご使用の場合はドメイン受信拒否設定を解除してください。</div>
                </td>
              </tr>

              <tr>
                <th>
                  <%= f.label :password, "パスワード（6文字以上）" %>
                   <% if @minimum_password_length %>
                  <% end %><b>※</b>
                </th>
                <td>
                  <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>　半角英数字
                  <br>
                </td>
              </tr>

              <tr>
                <th>
                  <%= f.label :password_confirmation, "パスワード再入力" %> <b>※</b>
                </th>
                <td>
                  <div style="margin-bottom:8px;">確認のため、もう一度ご入力ください。</div>
                  <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>　半角英数字
                  <br>
                </td>
              </tr>

              <tr>
                <th>
                  <%= f.label :facility_name, "施設名" %>
                  <b>※</b>
                </th>
                <td>
                  <%= f.text_field :facility_name, id:"user_name" %>
                  <br>
                </td>
              </tr>


              <tr>
                <th>ご住所 <b>※</b></th>
                <td>
                  例）171-0022
                  <div style="margin:5px 0px 10px 0px;">
                    <%= f.label :postal_code , "郵便番号" %>
                    <%= f.text_field :postal_code %>
                    <br>
                  </div>
                  
                  <div style="margin:5px 0px 13px 0px;">
                    <%= f.label :location_id, "都道府県" %>
                    <%= f.collection_select :location_id, Location.all, :id, :name, {} %>
                    <br>
                  </div>

                  <div style="margin:5px 0px 13px 0px;">
                    <%= f.label :municipality , "市区町村" %>
                    <%= f.text_field :municipality  %>
                    <br>
                  </div>

                  <div style="margin:5px 0px 13px 0px;">
                    <%= f.label :address, "番地" %>
                    <%= f.text_field :address %>
                    <br>
                  </div>

                  <div style="margin:5px 0px 13px 0px;">
                    <%= f.label :building_name , "建物名" %>
                    <%= f.text_field :building_name  %>
                    <br>
                    <div style="margin-top:13px;">※建物名に関しましては空欄でも問題ございません。</div>
                  </div>
                </td>
              </tr>

              <tr>
                <th>
                  <%= f.label :phone_number, "電話番号" %><b>※</b>
                </th>
                <td>
                  <%= f.text_field :phone_number %>　例）01209889999
                  <br>
                  <div style="margin-top:13px;"></div>
                </td>
              </tr>
              
            </tbody>
          </table>
        <% if local_assigns[:edit_flag].present? %>
          <div class="actions">
            <%= f.submit "更新", class: :form__btn  %>
        <% else%>
          <div class="actions">
            <%= f.submit "新規登録", class: :form__btn  %>
            
        <% end %>
      </div>